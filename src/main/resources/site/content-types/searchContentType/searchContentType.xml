<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
	<display-name>Search Content Type</display-name>
	<super-type>base:structured</super-type>
	<form>
		<input name="interfaceName" type="CustomSelector">
			<label>Interface</label>
			<occurrences minimum="0" maximum="1"/>
			<config>
				<service>interfaceSelector</service>
			</config>
		</input>

		<input name="queryParamName" type="TextLine">
			<label>Name of query parameter to use</label>
			<occurrences minimum="0" maximum="1"/>
			<default>q</default>
		</input>
	</form>
</content-type>
